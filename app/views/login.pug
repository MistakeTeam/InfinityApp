extends layout

block head
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/login.css')

block titlebar
    div.win-buttons.win-buttons-light
        button(onclick="javascript:minimize()").win-minimize
        button(onclick="javascript:maximize()").win-maximize
        button(onclick="javascript:close()").win-close

